<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context=".SosCardActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutmain">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_search"
            android:layout_width="match_parent"
            android:background="@color/profile"
            app:titleTextColor="@color/white"
            android:layout_height="?attr/actionBarSize" />


    </com.google.android.material.appbar.AppBarLayout>


    <ScrollView
        android:layout_marginTop="@dimen/_39sdp"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="@dimen/_1sdp"
        android:id="@+id/sos_scrollView">


        <RelativeLayout
            android:id="@+id/main_sos_card"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_550sdp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/medicalemergencycard"
                android:layout_width="@dimen/_135sdp"
                android:layout_height="@dimen/_130sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="@dimen/_5sdp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/medicalemergency_logo_image"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:elevation="@dimen/_100sdp"
                    android:src="@drawable/medical_emergency" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/_100sdp"
                    android:gravity="center"
                    android:text="Medical Emergency"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/abusecard"
                android:layout_width="@dimen/_135sdp"
                android:layout_height="@dimen/_130sdp"
                android:layout_below="@id/medicalemergencycard"
                android:layout_marginLeft="@dimen/_10sdp"
                android:backgroundTint="@color/white"
                android:layout_marginTop="@dimen/_5sdp"

                app:cardCornerRadius="@dimen/_5sdp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/abuse_logo_image"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:elevation="@dimen/_100sdp"
                    android:src="@drawable/abuse" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/_100sdp"
                    android:gravity="center"
                    android:text="Abuse"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/stuckinliftcard"
                android:layout_width="@dimen/_135sdp"
                android:layout_height="@dimen/_130sdp"
                android:layout_below="@id/Earthquakecard"
                android:layout_marginLeft="@dimen/_10sdp"
                android:backgroundTint="@color/white"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_toRightOf="@id/medicalemergencycard"
                app:cardCornerRadius="@dimen/_5sdp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/lift_logo_image"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:elevation="@dimen/_100sdp"
                    android:src="@drawable/lift" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/_100sdp"
                    android:gravity="center"
                    android:text="Stuck in lift"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/Earthquakecard"
                android:layout_width="@dimen/_135sdp"
                android:layout_height="@dimen/_130sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:backgroundTint="@color/white"
                android:layout_toRightOf="@id/medicalemergencycard"
                app:cardCornerRadius="@dimen/_5sdp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/earth_logo_image"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:elevation="@dimen/_100sdp"
                    android:src="@drawable/earthquake" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/_100sdp"
                    android:gravity="center"
                    android:text="Earthquake"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/Animalthreatcard"
                android:layout_width="@dimen/_135sdp"
                android:layout_height="@dimen/_130sdp"
                android:layout_below="@id/abusecard"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="@dimen/_5sdp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/threat_logo_image"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:elevation="@dimen/_100sdp"
                    android:src="@drawable/animalthreat"
                    app:civ_circle_background_color="@color/white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/_100sdp"
                    android:gravity="center"
                    android:text="Animal Threat"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/visitorthreadcard"
                android:layout_width="@dimen/_135sdp"
                android:layout_height="@dimen/_130sdp"
                android:layout_below="@id/stuckinliftcard"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_toRightOf="@id/Animalthreatcard"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="@dimen/_5sdp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/visitorthread_logo_image"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:elevation="@dimen/_100sdp"
                    android:src="@drawable/visitorthreat" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/_100sdp"
                    android:gravity="center"
                    android:text="Visitor Threat"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/thiefcard"
                android:layout_width="@dimen/_135sdp"
                android:layout_height="@dimen/_130sdp"
                android:layout_below="@id/Animalthreatcard"
                android:layout_marginLeft="@dimen/_10sdp"
                android:backgroundTint="@color/white"
                android:layout_marginTop="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_5sdp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/thief_logo_image"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:elevation="@dimen/_100sdp"
                    android:src="@drawable/thief" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/_100sdp"
                    android:gravity="center"
                    android:text="Thief"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/firecard"
                android:layout_width="@dimen/_135sdp"
                android:layout_height="@dimen/_130sdp"
                android:layout_below="@id/visitorthreadcard"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:backgroundTint="@color/white"
                android:layout_toRightOf="@id/medicalemergencycard"
                app:cardCornerRadius="@dimen/_5sdp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/fire_logo_image"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:elevation="@dimen/_100sdp"
                    android:src="@drawable/fire" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/_100sdp"
                    android:gravity="center"
                    android:text="Fire"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/othersoscard"
                android:layout_width="@dimen/_280sdp"
                android:layout_height="@dimen/_110sdp"
                android:layout_below="@id/thiefcard"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="@dimen/_5sdp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/othersos_logo_image"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:elevation="@dimen/_100sdp"
                    app:civ_circle_background_color="@color/white"
                    android:src="@drawable/ic_baseline_more_horiz_24" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/_85sdp"
                    android:gravity="center"
                    android:text="Other Sos"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </androidx.cardview.widget.CardView>


        </RelativeLayout>

    </ScrollView>
</RelativeLayout>
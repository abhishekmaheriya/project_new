<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar_contect_finvasys"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/main_background"
    tools:context=".ContactTeamCardActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutmain">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_search"
            android:layout_width="match_parent"
            android:background="@color/profile"
            app:titleTextColor="@color/white"
            android:layout_height="?attr/actionBarSize" />



    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_1sdp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/contactteamcard1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_185sdp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="@dimen/_55sdp"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="@dimen/_10sdp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/first_card"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_5sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:contextClickable="true"
                        android:drawableStart="@drawable/call"
                        android:drawablePadding="@dimen/_10sdp"
                        android:gravity="center_vertical"
                        android:text="Phone Number"
                        android:textColor="#808080"
                        android:textSize="16sp"
                        android:textStyle="bold" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginLeft="@dimen/_170sdp"
                        android:layout_marginRight="5dp"
                        android:contextClickable="true"
                        android:drawablePadding="20dp"
                        android:gravity="center_vertical"
                        android:text="+91 8849768307"
                        android:textColor="#2B547E"
                        android:textSize="16sp" />


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/second_card"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_55sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:contextClickable="true"
                        android:drawableStart="@drawable/call"
                        android:drawablePadding="@dimen/_10sdp"
                        android:gravity="center_vertical"
                        android:text="Alt.Phone Number"
                        android:textColor="#808080"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginLeft="@dimen/_170sdp"
                        android:layout_marginRight="5dp"
                        android:contextClickable="true"
                        android:drawablePadding="20dp"
                        android:gravity="center_vertical"
                        android:text="+91 7096345713"
                        android:textColor="#2B547E"
                        android:textSize="16sp" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/third_card"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_99sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:contextClickable="true"
                        android:drawableStart="@drawable/ic_baseline_email_24"
                        android:drawablePadding="@dimen/_10sdp"
                        android:gravity="center_vertical"
                        android:text="Email"
                        android:textColor="#808080"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginLeft="@dimen/_90sdp"
                        android:layout_marginRight="5dp"
                        android:contextClickable="true"
                        android:drawablePadding="20dp"
                        android:gravity="center_vertical"
                        android:text="infofincasys2022@gmail.com"
                        android:textColor="#2B547E"
                        android:textSize="16sp" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/four_card"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_145sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:contextClickable="true"
                        android:drawableStart="@drawable/ic_baseline_work_24"
                        android:drawablePadding="@dimen/_10sdp"
                        android:gravity="center_vertical"
                        android:text="Working Hours"
                        android:textColor="#808080"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginLeft="@dimen/_140sdp"
                        android:layout_marginRight="5dp"
                        android:contextClickable="true"
                        android:drawablePadding="20dp"
                        android:gravity="center_vertical"
                        android:text="11.00 AM To 6.00 PM"
                        android:textColor="#2B547E"
                        android:textSize="16sp" />

                </androidx.cardview.widget.CardView>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_235sdp"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/setting_app"
                android:layout_marginTop="-5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="@dimen/_40sdp"
                app:cardCornerRadius="@dimen/_10sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/subject"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:drawableStart="@drawable/ic_baseline_notes_24"
                        android:drawablePadding="10dp"
                        android:hint="Subject" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/description"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_97sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_50sdp"
                        android:layout_marginRight="@dimen/_10sdp">

                        <ImageView
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_6sdp"
                            android:backgroundTint="@color/white"
                            android:src="@drawable/ic_baseline_notes_24" />

                        <EditText
                            android:id="@+id/addtext"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_100sdp"
                            android:layout_marginStart="@dimen/_29sdp"
                            android:gravity="top"
                            android:hint="Description"
                            android:inputType="textCapSentences|textMultiLine"
                            android:lines="8"
                            android:padding="@dimen/_10sdp" />

                    </androidx.cardview.widget.CardView>


                    <TextView
                        android:id="@+id/Feedback_Attach"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_150sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:drawableEnd="@drawable/ic_baseline_attach_file_24"
                        android:drawablePadding="15dp"
                        android:padding="10dp"
                        android:text="Please select attachment file"
                        android:textColor="@color/black" />

                    <Button
                        android:id="@+id/sbmitbutton"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_190sdp"
                        android:background="@drawable/background_facilities"
                        android:backgroundTint="@color/colorPrimary1"
                        android:text="Submit"
                        android:textColor="@color/white" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/setting_app"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_below="@id/contactteamcard1"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_10sdp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:text="Setting"
                    android:textColor="@color/black"
                    android:textSize="16sp" />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/share_app"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_below="@id/cardview2"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="-40dp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_10sdp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Share App"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black"/>



            </androidx.cardview.widget.CardView>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>